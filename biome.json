{
	"$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noArrayIndexKey": "off",
				"noTsIgnore": "off",
				"noUnknownAtRules": "off",
				"noThenProperty": "off"
			},
			"complexity": {
				"noBannedTypes": "off",
				"noStaticOnlyClass": "off"
			},
			"correctness": {
				"noUnusedVariables": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			},
			"a11y": {
				"recommended": false
			},
			"performance": {
				"noAccumulatingSpread": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"overrides": [
		{
			"includes": [
				"resources/scripts/plugins/useDeepCompareEffect.ts",
				"resources/scripts/plugins/useDeepCompareMemo.ts"
			],
			"linter": {
				"rules": {
					"correctness": {
						"useExhaustiveDependencies": "off"
					}
				}
			}
		}
	],
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
